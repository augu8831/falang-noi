---
import "../styles/style.css";
---

<div class="menu-container">
  <menu>
    <div class="logo-container">
      <a href="">
        <img src="public/svg/header-line.svg" alt="" />
      </a>
    </div>

    <div>
      <ul class="main-menu">
        <div class="icons">
          <ul class="ulicons">
            <li><a href="https://www.instagram.com/falang.noi/?hl=da" class="fa-brands fa-instagram"></a></li>
            <li><a href="#" class="fa-brands fa-facebook-f"></a></li>
            <li><i class="fa-brands fa-tiktok"></i></li>
          </ul>
        </div>
        <li class="burger-menu"><img src="public/svg/menu1.svg" alt="" /></li>
      </ul>
    </div>
  </menu>
</div>

<div class="overlaymenu">
  <div class="close-container">
    <img src="public/svg/menu2.svg" alt="" />
  </div>
  <div>
    <ul class="sub-menu">
      <li><a href="/index.html">HOME</a></li>
      <li><a href="/about.html">ABOUT</a></li>
      <li><a href="/gallery.html">GALLERY</a></li>
    </ul>
  </div>
</div>

<style>
  /* nav {
    display: flex;
    padding: 1.5rem;
    justify-content: end;
    align-items: flex-start;
    gap: 2rem;
    flex-direction: row;
  } */

  a {
    text-decoration: none;
    color: var(--primary);
    font-family: "ivyepic", sans-serif;
    font-weight: 600;
    font-style: normal;
  }

  .icons ul {
      display: flex;
      flex-direction: row;
      gap: 1rem;
      list-style: none;
    }

    .ul {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }
    .fa-brands {
      font-size: 1.5rem;
    }
    .fa-instagram {
      color: var(--primary);
    }
    .fa-facebook-f {
      color: var(--primary);
    }

    .fa-tiktok {
      color: var(--primary);
    }
  .menu-container {
    padding: 10px 20px;
  }

  menu {
    display: flex;
    justify-content: space-between;
  }

  .logo-container img {
    padding-top: 0.8rem;
    height: 90px;
  }
  .main-menu {
    list-style: none;
    display: flex;
  }
   .main-menu a {
    padding-top: 1.5rem;
    display: block;

   }

   .main-menu i {
    padding-top: 1.5rem;
    display: block;

   }
    
  .overlaymenu a {
    padding: 20px 25px;
    display: block;
  }
  li img {
    width: 50px;
  }
  .burger-menu {
    padding: 15px 25px;
  }

  .overlaymenu {
    height: 100vh;
    width: 560px;
    background-color: var(--primary);
    position: fixed;
    top: 0;
    right: 0;
    overflow: hidden;
    transform: translateX(100%);
    transition: transform 0.2s;
  }
  body .open {
    transform: translateX(0);
  }

  .close-container {
    text-align: right;
    padding: 1.5rem;
  }
  .close-container img {
    width: 50px;
  }

  .sub-menu {
    padding-top: 4.5rem;
  }
  .sub-menu a {
    padding-left: 3rem;
    font-size: 55px;
    color: #ffc8a8;
    text-decoration: underline;
    text-underline-offset: 1.5rem;
    -webkit-text-stroke: 3px var(--primary)
    letter-spacing: 2px;
  }
  .sub-menu a:hover {
    color: var(--secondary);
  }


  @media screen and (max-width: 600px) {

    .burger-menu {
    padding: 15px 25px;
  }

  .overlaymenu {
    height: 100px;
    width: 100vh;
    background-color: var(--primary);
    position: fixed;
    top: 0;
    right: 0;
    overflow: hidden;
    transform: translateX(100%);
    transition: transform 0.2s;
  }
  body .open {
    transform: translateX(0);
  }

  .close-container {
    text-align: right;
    padding: 1.5rem;
  }
  .close-container img {
    width: 50px;
  }

  .sub-menu {
    padding-top: 4.5rem;
  }
  .sub-menu a {
    padding-left: 3rem;
    font-size: 55px;
    color: #ffc8a8;
    text-decoration: underline;
    text-underline-offset: 1.5rem;
    -webkit-text-stroke: 3px var(--primary)
    letter-spacing: 2px;
  }
  .sub-menu a:hover {
    color: var(--secondary);
  }
  
  }
</style>

<script>
  const overlaymenu = document.querySelector(".overlaymenu");
  const burgermenu = document.querySelector(".burger-menu");
  const close = document.querySelector(".close-container");

  burgermenu.addEventListener("click", function () {
    overlaymenu.classList.add("open");
  });

  close.addEventListener("click", function () {
    overlaymenu.classList.remove("open");
  });
</script>

