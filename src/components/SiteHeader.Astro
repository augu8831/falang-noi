---
const { title } = Astro.props;
---

<header>
  <div class="menu-container">
    <div class="logo-container">
      <img class="hideline" src="../svg/header-line.svg" alt="" />
      <h1>{title}</h1>
    </div>

    <div class="main-menu">
      <div class="icons">
        <ul>
          <li><a href="https://www.instagram.com/falang.noi/?hl=da" class="fa-brands fa-instagram"></a></li>
          <li><a href="#" class="fa-brands fa-facebook-f"></a></li>
          <li><i class="fa-brands fa-tiktok"></i></li>
          <li class="burger-menu"><img src="../svg/menu1.svg" alt="" /></li>
        </ul>
      </div>
    </div>
  </div>

  <div class="overlaymenu-container">
    <div class="icons-close">
      <ul class="ulicons">
        <li><a href="https://www.instagram.com/falang.noi/?hl=da" class="fa-brands fa-instagram"></a></li>
        <li><a href="#" class="fa-brands fa-facebook-f"></a></li>
        <li><i class="fa-brands fa-tiktok"></i></li>
        <li class="burger-menu2"><img src="../svg/menu2.svg" alt="" /></li>
      </ul>
    </div>

    <ul class="sub-menu">
      <li><a href="/index.html">HOME</a></li>
      <li><a href="/about.html">ABOUT</a></li>
      <li><a href="/gallery.html">GALLERY</a></li>
    </ul>
  </div>
</header>

<style>
  /* ALT menu */
  h1 {
    position: absolute;
    margin-left: 1.3rem;
    top: 1.5rem;
  }

  .hideline {
    display: block;
  }

  .burger-menu,
  .burger-menu2 {
    cursor: pointer;
    padding: 15px 25px;
  }

  .ulicons .fa-brands,
  .fa-instagram,
  .fa-facebook-f,
  .fa-tiktok {
    color: #ffc8a8;
  }

  .fa-brands {
    font-size: 1.5rem;
  }

  .fa-instagram {
    color: var(--primary);
  }

  .fa-facebook-f {
    color: var(--primary);
  }

  .fa-tiktok {
    color: var(--primary);
  }

  a {
    text-decoration: none;
    color: var(--primary);
    font-family: "ivyepic", sans-serif;
    font-weight: 600;
    font-style: normal;
  }

  body .open {
    transform: translateX(0);
  }

  li img {
    width: 50px;
  }

  /* COMPUTER PÅ SIDEN menu/ MENU CONTAINER DEL 1 */
  .menu-container {
    margin-bottom: 7rem;
    display: flex;
    justify-content: space-between;
    padding: 10px 20px;
  }

  .logo-container img {
    padding-top: 0.8rem;
    height: 90px;
  }

  .main-menu {
    list-style: none;
    display: flex;
  }

  .main-menu a {
    padding-top: 1.5rem;
    display: block;
  }

  .main-menu i {
    padding-top: 1.5rem;
    display: block;
  }

  .icons ul {
    list-style-type: none;
    display: flex;
    gap: 1rem;
  }

  /* COMPUTER PÅ RØD ÅBEN menu/ OVERLAY DEL 2 */

  .icons-close {
    display: flex;
    justify-content: flex-end;
    padding-top: 1.5rem;
    gap: 1rem;
    padding: 10px 20px;
  }

  .overlaymenu-container a {
    display: block;
  }

  .overlaymenu-container {
    height: 100vh;
    width: 570px;
    background-color: var(--primary);
    position: fixed;
    top: 0;
    right: 0;
    overflow: hidden;
    transform: translateX(100%);
    transition: transform 0.2s;
    z-index: 99;
  }

  .icons-close ul {
    display: flex;
    flex-direction: row;
    list-style-type: none;
  }

  .sub-menu {
    padding-top: 4.5rem;
  }

  .sub-menu a {
    padding-left: 3rem;
    font-size: 55px;
    color: #ffc8a8;
    text-decoration: underline;
    text-underline-offset: 1.5rem;
    z-index: 100;
    padding: 20px 55px;
  }

  @media screen and (max-width: 600px) {
    /* ALT menu */

    /* COMPUTER PÅ SIDEN menu/ MENU CONTAINER DEL 1 */
    .icons ul {
      display: flex;
      flex-direction: column-reverse;
      list-style: none;
      gap: 10px;
    }

    .menu-container {
      padding: 10px 20px;
      margin-bottom: 0rem;
    }

    .logo-container img {
      padding-top: 0.8rem;
      height: 90px;
    }

    .main-menu {
      list-style: none;
      display: flex;
      flex-direction: column-reverse;
    }

    .main-menu a {
      padding-top: 0.5rem;
      display: block;
    }

    .main-menu i {
      padding-top: 0.5rem;
      display: block;
    }

    .fa-instagram {
      color: var(--primary);
    }

    .fa-facebook-f {
      color: var(--primary);
      padding-left: 3px;
    }

    .fa-tiktok {
      color: var(--primary);
    }

    /* COMPUTER PÅ RØD ÅBEN menu/ OVERLAY DEL 2 */
    .icons-close ul {
      display: flex;
      flex-direction: column-reverse;
      list-style: none;
      gap: 10px;
    }

    .overlaymenu-container a,
    .overlaymenu-container i {
      padding: 20px 25px;
      display: block;
    }

    .overlaymenu-container {
      height: 100vh;
      width: 100vw;
      background-color: var(--primary);
      position: fixed;
      top: 0;
      right: 0;
      overflow: hidden;
      transform: translateX(100%);
      transition: transform 0.2s;
      z-index: 99;
    }

    .sub-menu {
      padding-top: 1rem;
    }

    .sub-menu a {
      font-size: 55px;
      color: #ffc8a8;
      text-decoration: underline;
      text-underline-offset: 1.5rem;
    }
  }
</style>

<script>
  const overlaymenu = document.querySelector(".overlaymenu-container");
  const burgermenu = document.querySelector(".burger-menu");
  const close = document.querySelector(".burger-menu2");

  burgermenu.addEventListener("click", function () {
    overlaymenu.classList.add("open");
  });

  close.addEventListener("click", function () {
    overlaymenu.classList.remove("open");
  });
</script>
